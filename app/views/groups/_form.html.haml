= form_for @group do |f|
  - if @group.errors.any?
    .chat-group-form__errors
      %h2
        #{@group.error_message_num}件のエラーが発生しました。
      %ul
        - @group.error_messages.each do |message|
          %li
            = message
  .chat-group-form__field
    .chat-group-form__field--left
      = f.label :name, class: 'chat-group-form__label'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: 'グループ名を入力してください'

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label{for: 'chat_group_チャットメンバーを追加'} チャットメンバーを追加
    .chat-group-form__field--right
      %input#user-search-field.chat-group-form__input{placeholder: '追加したいユーザー名を入力してください'}
      #user_search_result
    .chat-group-form__search.clearfix

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label チャットメンバー
    .chat-group-form__field--right
      #chat-group-users
      #member_search_result
        - @group.users.each do |user|
          .chat-group-user.clearfix.js-chat-member#chat_group_user_22
            %input{name: 'group[user_ids][]', type: 'hidden', value: user.id}
            %p.chat-group-user__name
              = user.name
            - if user != current_user
              %a.user_search_remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn 削除  
      
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'
